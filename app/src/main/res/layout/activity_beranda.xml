<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Beranda">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="20dp"
        android:elevation="5dp"
        android:background="@drawable/beranda_rounded"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="33dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/ellipse_7"
            android:layout_width="70dp"
            android:layout_height="64dp"
            app:cardCornerRadius="30dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="14dp"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="about"
                android:src="@drawable/bakery"/>

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="65dp"
            android:layout_height="24dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="14dp"
            android:gravity="center_horizontal|top"
            android:text="Halo,"
            android:fontFamily="@font/poppinsbold"
            android:textAppearance="@style/TextAppearance.AppCompat.Title" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="-118dp"
            android:fontFamily="@font/poppinsbold"
            android:layout_marginTop="35dp"
            android:gravity="center_horizontal|top"
            android:text="Usaha Bakery Jeffrey"
            android:textAppearance="@style/TextAppearance.AppCompat.Title" />
    </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/listproduct"
        android:layout_width="420dp"
        android:layout_height="618dp"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="8dp"
        android:onClick="Kedetail1"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteX="3dp"
        tools:listitem="@layout/activity_layout_list" />



</LinearLayout>