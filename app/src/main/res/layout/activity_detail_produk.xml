<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailProduk">

    <View
        android:layout_width="match_parent"
        android:layout_height="345dp"
        android:layout_marginTop="-72dp"
        android:background="@drawable/deskripsi" />

    <ImageView
        android:id="@+id/gambardeskripsi"
        android:layout_width="186dp"
        android:layout_height="187dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="-295dp"
        android:layout_marginTop="150dp"
        tools:layout_editor_absoluteY="147dp"
        android:background="@drawable/kuebolu"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="380dp"
        android:layout_marginLeft="-240dp"
        android:fontFamily="@font/poppinsbold"
        android:text="Kue Bolu Gulung Meses 250Gram"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="314dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jumlah : 5 Stok"
        android:fontFamily="@font/poppinsbold"
        android:textAlignment="center"
        android:layout_marginTop="410dp"
        android:layout_marginLeft="-210dp"
        android:textSize="14sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="-26dp"
        tools:layout_editor_absoluteY="408dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rp 45.000"
        android:fontFamily="@font/poppins"
        android:textAlignment="center"
        android:textColor="@android:color/holo_red_light"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginLeft="-90dp"
        android:layout_marginTop="445dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="432dp" />

    <TextView
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_marginLeft="-190dp"
        android:layout_marginTop="485dp"
        android:fontFamily="@font/poppinsbold"
        android:text="Kue Bolu Gulung Meres ini dikirim pada tanggal 16 November 2022 dengan ketahanan makanan ini hanya 1 minggu. "
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="483dp" />


    <RelativeLayout
        android:layout_width="408dp"
        android:layout_height="61dp"
        android:layout_marginLeft="-360dp"
        android:layout_marginTop="660dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent">

        <View
            android:id="@+id/rectangle_8"
            android:layout_width="590dp"
            android:layout_height="9dp"
            android:layout_marginLeft="-50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="0dp"
            android:background="@drawable/garisabout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="170dp" />

        <Button
            android:id="@+id/menu_home"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/home"
            android:onClick="keBeranda" />

        <Button
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="180dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/tambah"
            android:onClick="keFormTambah" />

        <Button
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="340dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/profilmenu"
            android:onClick="keProfile" />

    </RelativeLayout>


</LinearLayout>